@page "/debt"

<h1>Debt</h1>

<div class="form-group">
    <label for="sourceOfDebt">Source of Debt:</label>
    <input type="text" class="form-control" id="sourceOfDebt" placeholder="Enter source of debt">
</div>

<div class="form-group">
    <label for="dueDate">Due Date:</label>
    <input type="date" class="form-control" id="dueDate">
</div>

<div class="form-group">
    <label for="isCleared">Is cleared?</label>
    <select class="form-control" id="isCleared">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
</div>

<button type="submit" class="btn btn-primary">Submit</button>

<p class="mt-3">Note: You have Rs. 0 debt remaining. Thank you!</p>

<style>
    body {
        background-color: #002db3;
    }
</style>